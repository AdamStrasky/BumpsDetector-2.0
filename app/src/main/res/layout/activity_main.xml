<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context="com.example.monikas.navigationapp.MainActivity" >

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:id="@+id/location"
        android:layout_marginTop="2dp"
        android:text="Navigate to..."
        android:focusableInTouchMode="true"
        android:focusable="true"
        android:cursorVisible="false"
        android:paddingLeft="15dp"
        android:textStyle="bold"
        android:textColorHint="#ffffff"
        android:textColor="#ffffff"
        android:background="#282626"/>

    <ImageView
        android:id="@+id/search_img"
        android:onClick="onClick_Search"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignTop="@+id/location"
        android:layout_alignBottom="@+id/location"
        android:layout_alignRight="@+id/location"
        android:src="@drawable/abc_ic_commit_search_api_mtrl_alpha"/>

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.MapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/location" >
     </fragment>

</RelativeLayout>