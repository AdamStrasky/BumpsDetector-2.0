<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:mapbox="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    tools:context="com.example.monikas.navigationapp.main_application.MainActivity" >


    <com.mapbox.mapboxsdk.maps.MapView
        android:id="@+id/mapboxMarkerMapView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        mapbox:style_url="mapbox://styles/mapbox/streets-v9"
        mapbox:zoom="2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/location"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        mapbox:center_latitude="49.2066418"
        mapbox:center_longitude="18.8746749">


    </com.mapbox.mapboxsdk.maps.MapView>

    <LinearLayout

        android:layout_width="384dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/mapConfirm"
        android:layout_weight="1"
        android:layout_alignTop="@+id/navig_on"
        android:keepScreenOn="false"
        android:visibility="invisible"
        android:transitionGroup="false"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:id="@+id/saveMap_btn"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="Download"
            android:textAllCaps="false" />


        <Button
            android:id="@+id/backMap_btn"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="Back"
            android:textAllCaps="false" />
    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:id="@+id/confirm"
        android:layout_weight="1"
        android:layout_alignParentBottom="true"
        android:layout_alignTop="@+id/navig_on"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:id="@+id/save_btn"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="Save"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/delete_btn"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="Delete"
            android:textAllCaps="false" />
    </LinearLayout>

    <Button
        android:id="@+id/add_button"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/circle_button"
        android:text="+"
        android:textColor="#fff"
        android:textSize="36sp"
        android:textAllCaps="false"
        android:layout_alignBottom="@+id/mapConfirm"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="17dp"
        android:layout_marginEnd="17dp"
        android:layout_marginBottom="36dp" />

    <Button
        android:id="@+id/navig_on"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Back on my position"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textAllCaps="false" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:id="@+id/location"
        android:text="Navigate to..."
        android:focusableInTouchMode="true"
        android:focusable="true"
        android:cursorVisible="false"
        android:paddingLeft="15dp"
        android:textStyle="bold"
        android:textColorHint="#ffffff"
        android:textColor="#ffffff"
        android:background="#282626"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/search_img"
        android:onClick="onClick_Search"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignTop="@+id/location"
        android:layout_alignBottom="@+id/location"
        android:layout_alignRight="@+id/location"
        android:src="@drawable/abc_ic_commit_search_api_mtrl_alpha"/>
</RelativeLayout>
