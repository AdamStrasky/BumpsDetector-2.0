<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:mapbox="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    tools:context="com.example.monikas.navigationapp.MainActivity" >

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:id="@+id/location"
        android:layout_marginTop="2dp"
        android:text="Navigate to..."
        android:focusableInTouchMode="true"
        android:focusable="true"
        android:cursorVisible="false"
        android:paddingLeft="15dp"
        android:textStyle="bold"
        android:textColorHint="#ffffff"
        android:textColor="#ffffff"
        android:background="#282626"/>

    <ImageView
        android:id="@+id/search_img"
        android:onClick="onClick_Search"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignTop="@+id/location"
        android:layout_alignBottom="@+id/location"
        android:layout_alignRight="@+id/location"
        android:src="@drawable/abc_ic_commit_search_api_mtrl_alpha"/>




    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:id="@+id/confirm"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="20dp">

        <Button
            android:id="@+id/save_btn"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="Save" />

        <Button
            android:id="@+id/delete_btn"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="Delete" />
    </LinearLayout>


    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.MapFragment"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_above="@+id/confirm"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">
    </fragment>

    <com.mapbox.mapboxsdk.maps.MapView
        android:id="@+id/mapboxMarkerMapView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_above="@+id/map"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/location"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        mapbox:style_url="mapbox://styles/mapbox/streets-v9"
        mapbox:center_latitude="40.73581"
        mapbox:center_longitude="-73.99155"
        mapbox:zoom="11"/>
       />

    <Button
        android:id="@+id/add_button"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/circle_button"
        android:text="+"
        android:textColor="#fff"
        android:textSize="36sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>